@article{kennedy2006,
  title = {Language Ability after Early Detection of Permanent Childhood Hearing Impairment},
  author = {Kennedy, Colin R. and McCann, Donna C. and Campbell, Michael J. and Law, Catherine M. and Mullee, Mark and Petrou, Stavros and Watkin, Peter and Worsfold, Sarah and Yuen, Ho Ming and Stevenson, Jim},
  year = {2006},
  month = may,
  volume = {354},
