@article{robertson2009,
  title = {Permanent Bilateral Sensory and Neural Hearing Loss of Children after Neonatal Intensive Care Because of Extreme Prematurity: {{A}} Thirty-Year Study},
  author = {Robertson, Charlene M.T. and Howarth, Tanis M. and Bork, Dietlind L.R. and Dinu, Irina A.},
  year = {2009},
